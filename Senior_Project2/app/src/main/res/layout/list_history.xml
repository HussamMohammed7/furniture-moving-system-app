<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="20dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_id_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="30dp"
                android:text="order condition :"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/condition_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finished"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/order_id_history"
                app:layout_constraintStart_toEndOf="@id/order_id_history"
                app:layout_constraintTop_toTopOf="@id/order_id_history"
                android:layout_marginStart="70dp"/>



            <TextView
                android:id="@+id/date_order_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="60dp"
                android:text="Date Finished"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/history_order_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013/03/21"
                android:textColor="@color/black"
                android:layout_marginStart="80dp"

                app:layout_constraintBottom_toBottomOf="@id/date_order_text"
                app:layout_constraintStart_toEndOf="@id/date_order_text"
                app:layout_constraintTop_toTopOf="@id/date_order_text"/>




        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>