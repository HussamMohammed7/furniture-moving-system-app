<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="20dp"
        >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/customer_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="Customer Name : "
        android:textColor="@color/black"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/customer_name_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hussam Sharmani"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/customer_name_text"
        app:layout_constraintStart_toEndOf="@id/customer_name_text"
        app:layout_constraintTop_toTopOf="@id/customer_name_text"
        android:layout_marginStart="50dp"/>



    <TextView
        android:id="@+id/date_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="Date Of arrive"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/date_order_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2013/03/21"
        android:textColor="@color/black"
        android:layout_marginStart="80dp"

        app:layout_constraintBottom_toBottomOf="@id/date_order_text"
        app:layout_constraintStart_toEndOf="@id/date_order_text"
        app:layout_constraintTop_toTopOf="@id/date_order_text"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accept_order_button"
        android:backgroundTint="@color/white"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_background"
        android:text="Accept"
        android:textColor="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:backgroundTint="@color/white"
        android:id="@+id/view_location_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_background"
        android:text="View the order"

        android:textColor="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>